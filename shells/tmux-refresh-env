if [ -n "$TMUX" ]; then
        function refresh() {
                sshauth=$(tmux show-environment | grep "^SSH_AUTH_SOCK")
                if [ $sshauth ]; then
                        export $sshauth
                fi
                display=$(tmux show-environment | grep "^DISPLAY")
                if [ $display ]; then
                        export $display
                fi
        }
else
        function refresh() {; }
fi

function preexec() {
        refresh
}

# vim: ft=sh
