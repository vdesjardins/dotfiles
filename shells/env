#!/usr/bin/env bash

export PATH="/snap/bin:$HOME/.gotools:$HOME/tools/bin:$HOME/go/bin:$HOME/bin:/usr/local/go/bin:/usr/local/kubebuilder/bin:/usr/local/bin:/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

export CLICOLOR="YES"

export EDITOR=nvim

export HISTFILESIZE=3000
export PYTHONSTARTUP=~/.pythonrc
export MANPATH=/usr/local/man:$MANPATH

export GOPATH=~/go

# cdargs
if [ -f /usr/share/doc/cdargs/examples/cdargs-bash.sh ]; then
        source /usr/share/doc/cdargs/examples/cdargs-bash.sh
fi

# rvm
if [[ -s $HOME/.rvm/scripts/rvm ]]; then source $HOME/.rvm/scripts/rvm; fi

export GOPATH=~/go
