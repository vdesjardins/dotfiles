#!/usr/bin/env bash

alias ee="$EDITOR ~/dotfiles/shells/env; source ~/dotfiles/shells/env"

export PATH="/snap/bin:$HOME/.gotools:$HOME/tools/bin:$HOME/go/bin:$HOME/bin:${KREW_ROOT:-$HOME/.krew}/bin:/usr/local/go/bin:/usr/local/opt/grep/libexec/gnubin:/usr/local/bin:/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

export CLICOLOR="YES"

export EDITOR=nvim

export HISTFILESIZE=3000
export PYTHONSTARTUP=~/.pythonrc
export MANPATH=/usr/local/man:$MANPATH

export GOPATH=~/go

# cdargs
if [ -f /usr/share/doc/cdargs/examples/cdargs-bash.sh ]; then
        source /usr/share/doc/cdargs/examples/cdargs-bash.sh
fi

export SPACESHIP_KUBECTL_VERSION_SHOW=false
export SPACESHIP_KUBECTL_SHOW=true
