#!/bin/bash

function gcloud() {
        docker run --rm -it \
                -v "${HOME}/.gcloud:/.config/gcloud" \
                -v "${HOME}/.ssh:/root/.ssh:ro" \
                -v "$(which docker):/usr/bin/docker" \
                -v /var/run/docker.sock:/var/run/docker.sock \
                -v "${HOME}/.kube:/.kube" \
                --user ${UID} \
                --name gcloud \
                google/cloud-sdk:latest gcloud "$@"
}

function kubectl() {
        docker run --rm -it \
                -v "${HOME}/.gcloud:/.config/gcloud" \
                -v "${HOME}/.kube:/.kube" \
                --user ${UID} \
                --name kubectl \
                google/cloud-sdk:latest kubectl "$@"
}
