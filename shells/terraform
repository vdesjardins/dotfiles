#!/usr/bin/env bash

alias et="$EDITOR ~/dotfiles/shells/terraform; source ~/dotfiles/shells/terraform"

alias tf=dterraform

alias tfa="dterraform apply"
alias tfp="dterraform apply"

function tfat() {
        dterraform apply -target="$@"
}
function tfpt() {
        dterraform plan -target="$@"
}
